		boolean b = false;
		String msg = "保存失败";
		LoanContract lc = loanContractService.findLoanContract(loanContract.getLcId());
		lc.setLoanerBankName(loanContract.getLoanerBankName());
		lc.setLoanerActName(loanContract.getLoanerActName());
