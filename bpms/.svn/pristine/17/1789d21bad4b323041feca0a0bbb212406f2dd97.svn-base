		try {
			String hql = "FROM InvestOrder t1 WHERE t1.investProcessType='1' AND t1.investOrderId='"+investOrderId+"'";
			List<InvestOrder> investOrderList = baseDAO.find(hql);
			return investOrderList.size()>0 ? investOrderList.get(0) : null;			
		} catch (Exception e) {
			e.printStackTrace();
