	//删除
	function delRows(index) {
		var $row = getRowData(index);
		if ($row) {
			$.messager.confirm('提示','是否确定删除所选的数据吗？',function(flag) {
				if (flag) {
					$.ajax({
							url : "loanOrder/loanOrderAction!deleteLoanOrder.action",
							data : "loanOrderId="
									+ $row.loanOrderId,
							dataType : 'JSON',
							success : function(rsp) {
								if (rsp.status) {
									//删除成功后刷新列表
									$("#dg").datagrid(
											'reload');
								}
								parent.$.messager.show({
									title : rsp.title,
									msg : rsp.message,
									timeout : 3000 * 2
								});
							}
						});
				}
			});
		}
	}
