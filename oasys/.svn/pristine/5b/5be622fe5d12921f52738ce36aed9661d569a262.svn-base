<script type="text/javascript">
function toSaveOrUpdateInvestProductOpenDlg(){
	var btaId = $('#btaId').val();
	$tiaozheng=$("<div></div>").dialog({
		title : '编辑',
		width : 900,
		height : 725,
		modal:true,
		href : "jsp/pd/BusinessTripApp/businessTripAppForm.jsp",
		onLoad:function(){
			createUser('baseForm');
			$("#vehicle").combobox({
				url:"commonController/findDicList.do?codeMyid=takeover_goods",
				valueField: 'code',
