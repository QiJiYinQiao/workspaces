/**
 * 营业部经理驳回/通过
 */
function submitTask(result,object){
	// 验证备注信息是否已经填写
	if($("#comment").val()==""){
		$.messager.alert("提示","请填写备注信息后再进行提交!","warning");
		return false;
	}
	// 确认是否提交
	//0驳回 1是通过
	$.messager.confirm('提示', '点击按钮之后将进入下一个任务活动环节,此任务将对您不可见!', function(r){
		if (r){
			var data = {
				"remark":$("#comment").val(),
				"result":result,
				"paId":$row.caID,
				"appNo":$row.appNo,
				"taskId":$row.taskId,
				"handleResult":result=='caiwujinglitongguo'?1:0
			}
			$.ajax({
				type:"POST",
				url:"callingCard/handleTask.do",
				data:data,
				dataType:"JSON",
				success : function(msg) {
					if(msg.status){
						$("#waitTaskGrid").datagrid('reload');
						$("#addWindow").dialog('close');
					}
				}
			});
		}
	});
}
$(function(){
	 $("#investProductInputOrSaveForm").form('load',$row);	
